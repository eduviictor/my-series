{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "exclude": [
    "coverage",
    "node_modules",
    "jest.config.js",
    "prettier.config.js",
    "commitlint.config.js",
    "jest-unit-config.js",
    "jest-mongodb-config.js"
  ]
}
